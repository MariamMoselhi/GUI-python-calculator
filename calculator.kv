#Layout that contains other layouts
<MyGrid>:

    cols: 1
    rows: 6               #row for Text box, 4 rows for each 3 buttons, and 1 final row for the 'scientific calculator' button
    padding: 10
    spacing: 10

    # Text box
    BoxLayout:
        TextInput:
            multiline: False

    # Box layouts for each 3 buttons

    BoxLayout:
        spacing: 10
        orientation: 'horizontal'
        Button:
            text: "7"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "8"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "9"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "+"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8


    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        Button:
            text: "4"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "5"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "6"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "-"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8


    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        Button:
            text: "1"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "2"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "3"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "*"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8



    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        Button:
            text: "AC"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "0"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "="
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8

        Button:
            text: "/"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8


    # Box layout for the final button
    BoxLayout:
        Button:
            text: "Scientific Calculator"
            font_size: 40
            background_color: 1, 0.4, 0.7, 0.8
            font_size: 30
